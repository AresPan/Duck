<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Shape">
        <attr name="solid" format="reference|color" />

        <attr name="corner" format="dimension" />
        <attr name="corner_top_left" format="dimension" />
        <attr name="corner_top_right" format="dimension" />
        <attr name="corner_bottom_left" format="dimension" />
        <attr name="corner_bottom_right" format="dimension" />

        <attr name="stroke_width" format="dimension" />
        <attr name="stroke_color" format="color" />
        <attr name="stroke_dash_gap" format="dimension" />
        <attr name="stroke_dash_width" format="dimension" />

        <attr name="padding_left" format="dimension" />
        <attr name="padding_top" format="dimension" />
        <attr name="padding_right" format="dimension" />
        <attr name="padding_bottom" format="dimension" />

        <attr name="size_width" format="dimension">
            <flag name="wrap_content" value="-2" />
            <flag name="match_parent" value="-1" />

        </attr>
        <attr name="size_height" format="dimension">
            <flag name="wrap_content" value="-2" />
            <flag name="match_parent" value="-1" />
        </attr>

        <attr name="gradient_linear_orientation">
            <flag name="top_bottom" value="1" />
            <flag name="tr_bl" value="2" />
            <flag name="right_left" value="3" />
            <flag name="br_tl" value="4" />
            <flag name="bottom_top" value="5" />
            <flag name="bl_tr" value="6" />
            <flag name="left_right" value="7" />
            <flag name="tl_br" value="8" />
        </attr>

        <attr name="gradient_sweep_centerX" format="dimension" />
        <attr name="gradient_sweep_centerY" format="dimension" />

        <attr name="gradient_radial_centerX" format="dimension" />
        <attr name="gradient_radial_centerY" format="dimension" />
        <attr name="gradient_radial_radius" format="dimension" />


        <attr name="gradient_color_start" format="reference|color" />
        <attr name="gradient_color_center" format="reference|color" />
        <attr name="gradient_color_end" format="reference|color" />


        <attr name="shape">
            <flag name="rectangle" value="0" />
            <flag name="oval" value="1" />
            <flag name="line" value="2" />
            <flag name="right" value="3" />
        </attr>
    </declare-styleable>

</resources>